      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.select :rating, (0..5) %>
  </div>
  <div class="field">
    <% if params[:id].present? %>
      <%= f.hidden_field :product_id, :value => params[:id] %>
    <% else %>
      <%= f.hidden_field :product_id, :value => @review.product_id %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
